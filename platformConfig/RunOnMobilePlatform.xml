<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Mobile UI Automation Testing" verbose="1" parallel = "tests" thread-count="3">
    <parameter name="environmentName" value="Dev"></parameter>
    <test name="Run on Samsung">
        <parameter name="device" value="Samsung"></parameter>
        <parameter name="version" value="S25 Ultra"></parameter>
        <classes>
            <class name="platformMobile.Mobile_01_User"/>
            <class name="platformMobile.Mobile_02_Payment"/>
        </classes>
    </test>
    <test name="Run on iPhone">
        <parameter name="device" value="iPhone"></parameter>
        <parameter name="version" value="16 Promax"></parameter>
        <classes>
            <class name="platformMobile.Mobile_01_User"/>
            <class name="platformMobile.Mobile_02_Payment"/>
        </classes>
    </test>
</suite>